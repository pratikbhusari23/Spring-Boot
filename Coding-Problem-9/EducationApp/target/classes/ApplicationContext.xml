<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="simpleUser" class="com.pb.EducationApp.SimpleUser" scope="prototype"
        init-method="init" 
        destroy-method="destroy">
    </bean>
    <bean id="simpleUserList" class="com.pb.EducationApp.SimpleUserList" scope="prototype"
        init-method="init" 
        destroy-method="destroy">
    </bean>
    
        <!-- collaborators and configuration for this bean go here -->

    <bean id="javaInstructor" class="com.pb.EducationApp.JavaInstructor"
        init-method="init" 
        destroy-method="destroy">       
    </bean>
    <bean id="springInstructor" class="com.pb.EducationApp.SimpleInstructor"
        init-method="init" 
        destroy-method="destroy">
    
    </bean>
    
    <bean id="paidCourseWithJavaInstructor" class="com.pb.EducationApp.PaidCourse">
        <constructor-arg ref="javaInstructor"/>
        <constructor-arg ref="simpleUserList"/> 
    </bean>
    
    <bean id="paidCourseWithSpringInstructor" class="com.pb.EducationApp.PaidCourse">
        <constructor-arg ref="springInstructor"/>
        <constructor-arg ref="simpleUserList"/>
    </bean>

</beans>